<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">


    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        
        <!-- Specify the JPA provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity classes (optional, can be auto-scanned) -->
        <!-- <class>com.example.MyEntity</class> -->
        
        <!-- If false, Include all entity classes automatically -->
        <!-- <exclude-unlisted-classes>false</exclude-unlisted-classes> -->

        <properties>
            <!-- JDBC connection properties -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/training_db"/>
			<property name="jakarta.persistence.jdbc.user" value="cjbgo"/>
			<property name="jakarta.persistence.jdbc.password" value=""/>


            <!-- Hibernate properties -->
            <!-- Explicit dialect (Hibernate 7 can auto-detect, but setting this avoids surprises) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Schema generation strategy: validate | update | create | create-drop | none -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>